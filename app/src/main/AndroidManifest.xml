<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.iqiyi.qigsaw.sample">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".QigsawApplication"
        android:allowBackup="true"
        android:appComponentFactory="com.iqiyi.qigsaw.sample.SampleSplitAppComponentFactory"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning"
        tools:replace="android:name,android:appComponentFactory"
        tools:targetApi="p">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".QigsawInstaller"
            android:theme="@style/Theme.ActivityDialogStyle" />

        <activity
            android:name=".SampleObtainUserConfirmationDialog"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.ActivityDialogStyle" />

    </application>


</manifest>